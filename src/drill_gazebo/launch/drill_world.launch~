<launch>	  
	<include file="$(find gazebo_ros)/launch/empty_world.launch">	    
		<arg name="world_name" value="$(find drill_gazebo)/worlds/drillbot.world"/>	    
		<arg name="gui" value="true"/>	  
	</include>	

<!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
<param name="robot_description" command="$(find xacro)/xacro.py '$(find drill_description)/urdf/drillbot.xacro'" />

<!-- push robot_description to factory and spawn robot in gazebo -->
<node name="drill_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
 args="-urdf -param robot_description -model mybot" />

<!-- ros_control mybot launch file -->
<include file="$(find drill_control)/launch/drill_control.launch" />

</launch>
